<Page x:Class="School_Application.View.Pages.MainViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:School_Application.View.Pages"
      mc:Ignorable="d" Loaded="Page_Loaded"
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Меню">

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Orientation="Vertical">
            <Button x:Name="teacherTxb"
                    Content="Список учителей"
                    Width="220"
                    Height="40"
                    Margin="0,0,0,10" Click="teacherTxb_Click"/>
            <Button x:Name="studentsTxb"
                    Content="Список учеников"
                    Width="220"
                    Height="40"
                    Margin="0,0,0,10" Click="studentsTxb_Click"/>
            <Button x:Name="circleBtn"
                    Content="Кружки"
                    Width="220"
                    Height="40"
                    Margin="0,0,0,10" Click="Button_Click"/>
            <Button x:Name="competitionBtn"
                    Content="Конкурсы"
                    Width="220"
                    Height="40"/>
        </StackPanel>
    </Grid>
</Page>
